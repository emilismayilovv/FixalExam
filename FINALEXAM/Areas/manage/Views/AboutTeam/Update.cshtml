@using FINALEXAM.Models;
@model AboutTeam

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic form elements</h4>
            <p class="card-description">
                Basic form elements
            </p>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for=Name class="form-control" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>

                <div class="form-group">

                    <select asp-for="AboutPositionId" asp-items="new SelectList(ViewBag.AboutPositions,nameof(AboutPosition.Id),nameof(AboutPosition.Name))"></select>
                    <span asp-validation-for="AboutPositionId"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photo">Name</label>
                    <input asp-for=Photo class="form-control" placeholder="Photo">
                    <span asp-validation-for="Photo"></span>
                </div>


                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button asp-controller="aboutteam" asp-action="index" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>
