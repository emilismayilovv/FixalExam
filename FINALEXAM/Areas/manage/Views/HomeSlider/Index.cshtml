@using FINALEXAM.Models;
@model List<HomeSlider>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <a asp-controller="homeslider" asp-action="create">Create HomeSlider</a>
        <div class="card-body">
            <h4 class="card-title">Striped Table</h4>
            <p class="card-description">
                Add class <code>.table-striped</code>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                description
                            </th>
                            <th>
                                Profession
                            </th>
                            <th>
                                Setting
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="assets/img/@item.Image" />
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.SubTitle
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    <a asp-controller="homeslider" asp-action="update" asp-route-id="@item.Id">Update</a>
                                    <a asp-controller="homeslider" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>