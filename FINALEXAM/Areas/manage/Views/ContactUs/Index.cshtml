@using FINALEXAM.Models;
@model List<ContactUs>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <a asp-controller="contactus" asp-action="create">Create Contact Icon</a>
        <div class="card-body">
            <h4 class="card-title">Striped Table</h4>
            <p class="card-description">
                Add class <code>.table-striped</code>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                SubTitle1
                            </th>
                            <th>
                                SubTitle2
                            </th>
                            <th>
                                Setting
                            </th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="assets/img/@item.Image" />
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.SubTitle1
                                </td>
                                <td>
                                    @item.SubTitle2
                                </td>
                                
                                <td>
                                    <a asp-controller="contactus" asp-action="update" asp-route-id="@item.Id">Update</a>
                                    <a asp-controller="contactus" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                        <div class="ltn__pagination">
                            <ul>
                                @if (ViewBag.Page > 0)
                                {
                                    <a asp-action="index" asp-controller="contactus" asp-route-page="@(ViewBag.Page-1)" type="button" class="btn btn-secondary ">Previous</a>
                                }
                                @for (int i = 0; i < ViewBag.Total; i++)
                                {
                                    <a asp-action="index" asp-controller="contactus" asp-route-page="@(i)" type="button" class="btn btn-secondary @(i==ViewBag.Page?"disabled":"")">@(i + 1)</a>
                                }
                                @if (ViewBag.Page + 1 < ViewBag.Total)
                                {
                                    <a asp-action="index" asp-controller="contactus" asp-route-page="@(ViewBag.Page+1)" type="button" class="btn btn-secondary">Next</a>
                                }
                            </ul>
                        </div>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>